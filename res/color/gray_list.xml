<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item
                android:left="8dp" 
                android:right="8dp"
                android:drawable="@drawable/gray_repeat" >

               
                </item>

            <item android:bottom="50dp"
                android:left="8dp" 
                android:right="8dp">
            <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:startColor="#44000000" 
                        android:endColor="#00000000" 
                        android:type="linear" />
                </shape>
                </item>

            <item android:top="40dp"
                android:left="8dp" 
                android:right="8dp">
            <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        
                        android:endColor="#22FFFFFF" 
                        android:startColor="#00FFFFFF" 
                        android:type="linear" />
                </shape>
                </item>

        </layer-list>
        </item>
        
    <item android:state_pressed="true"
        android:left="8dp" 
                android:right="8dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:endColor="#66113D4D" 
                        android:startColor="#99113D4D" 
                        android:type="linear" />
                </shape>
        </item>

</selector>