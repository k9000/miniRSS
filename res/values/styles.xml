<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <!--  
    <style name="MaruButton" parent="@android:Widget.Button">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    -->
    <style name="metalList" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/metal</item>
    </style>
    
    <style name="metal_actionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/metal</item>
    </style>
    
    <style name="light_metal_actionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/light_metal</item>
    </style>
    
    <style name="Glass" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:listChoiceBackgroundIndicator">@color/transparent_list</item>
        <item name="android:listPreferredItemHeight">72dp</item>
        <item name="android:colorForeground">@color/glass_bar</item>
        <item name="android:colorBackground">#00000000</item>
    </style>
 
    <style name="DarkGlass" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/metal_actionbar</item>
        <item name="android:listChoiceBackgroundIndicator">@color/glass_list</item>
        <item name="android:listPreferredItemHeight">60dp</item>
        <item name="android:colorForeground">@color/glass_bar</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">@color/blue_text</item>
    </style>
    
    <style name="LightMetal" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/light_metal_actionbar</item>
        <item name="android:listChoiceBackgroundIndicator">@color/light_glass_list</item>
        <item name="android:listPreferredItemHeight">72dp</item>
        <item name="android:colorForeground">@color/light_glass_bar</item>
        <item name="android:colorBackground">@color/light_glass_back</item>
    </style>
    

</resources>