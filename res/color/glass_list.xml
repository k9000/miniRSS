<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item
                android:left="8dp" 
                android:right="8dp" ><shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:endColor="#000000" 
                        android:startColor="#666666" 
                        android:type="linear" />
                </shape>
                </item>

            <item android:left="9dp" 
                android:right="9dp" 
                android:top="30dp">
            <shape android:shape="rectangle">
                    <solid android:color="#88000000" />
                </shape>
                </item>

            <item android:bottom="1dp" 
                android:left="9dp" 
                android:right="9dp" 
                android:top="40dp">
            <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:endColor="#44FFFFFF" 
                        android:startColor="#00FFFFFF" 
                        android:type="linear" />
                </shape>
                </item>

        </layer-list>
        </item>
        
    <item android:state_pressed="true">
        <layer-list>

            <item android:bottom="-2dp" android:top="-2dp"><shape android:shape="rectangle">
                    <solid android:color="#2233B5E5" />
                </shape>
                </item>
            <item
                android:left="8dp" 
                android:right="8dp" >
                <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:endColor="#66000000" 
                        android:startColor="#66666666" 
                        android:type="linear" />
                </shape>
                </item>

            <item android:left="9dp" 
                android:right="9dp" 
                android:top="30dp">
                <shape android:shape="rectangle">
                    <solid android:color="#44000000" />
                </shape>
                </item>

            <item android:bottom="1dp" 
                android:left="9dp" 
                android:right="9dp" 
                android:top="40dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="270" 
                        android:endColor="#2233B5E5" 
                        android:startColor="#0033B5E5" 
                        android:type="linear" />
                </shape>
                </item>

        </layer-list>
        </item>

</selector>